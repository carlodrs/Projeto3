<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResources" />


    <package name="default" namespace="/" extends="struts-default">

        <default-action-ref name="index" />

        <global-results>
            <result name="error">/error.jsp</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error"/>
        </global-exception-mappings>

        <action name="index">
            <result type="redirectAction">
                <param name="actionName">Store</param>
                <param name="namespace">/site</param>
            </result>
        </action>
    </package>
    
    <package name="site" namespace="/site" extends="struts-default">
		<action name="loginCMS" class="br.com.store.cms.security.action.LoginCMSAction" method="doLogin">	
			<result name="input">/cms/templateLoginCMS.jsp</result>
			<result name="error">/cms/templateLoginCMS.jsp</result>
			<result name="success">/cms/index.jsp</result>
		</action>
		
		<action name="prepareLoginCMS" class="br.com.store.cms.security.action.LoginPreparedCMSAction" method="prepare">	
			<result name="input">/cms/templateLoginCMS.jsp</result>
		</action>
		
		
		<action name="ProductInitCMSAction" class="br.com.store.cms.product.action.ProductCMSAction">	
			<result name="input">/cms/pages/product/template_message.jsp</result>
		</action>
		
		<action name="ProductPrepareCreateCMSAction" class="br.com.store.cms.product.action.ProductCMSAction" method="prepare">	
			<result name="input">/cms/pages/product/template_create.jsp</result>
		</action>
		
		<action name="ProductCreateCMSAction" class="br.com.store.cms.product.action.ProductCreateCMSAction" method="create"> 	
			<result name="error">/cms/pages/product/template_create.jsp</result>
			<result name="success">/cms/pages/product/template_message.jsp</result>
			<result name="input">/cms/pages/product/template_create.jsp</result>
		</action>
		
		
		<action name="ProductListCMSAction" class="br.com.store.cms.product.action.ProductCMSAction" method="listAll">	
			<result name="success">/cms/pages/product/template_list.jsp</result>
			<result name="error">/cms/pages/product/template_list.jsp</result>
		</action>
		
		<action name="ProductSearchCMSAction" class="br.com.store.cms.product.action.ProductCMSAction" method="listAll">	
			<result name="success">/cms/pages/product/template_list.jsp</result>
			<result name="error">/cms/pages/product/template_list.jsp</result>
		</action>
		
		<action name="ClientRegisteredAction" class="br.com.store.cms.user.action.ClientRegisteredAction" method="create"> 	
			<result name="error">/cms/pages/user/template_create_user.jsp</result>
			<result name="success">/cms/pages/user/template_message_user.jsp</result>
			<result name="input">/cms/pages/user/template_create_user.jsp</result>
		</action>
		
		
		<action name="PrepareClientRegisteredAction" class="br.com.store.cms.user.action.PrepareClientRegisteredAction" method="prepare"> 	
			<result name="input">/cms/pages/user/template_create_user.jsp</result>
		</action>
		
		<action name="ListClientRegisteredAction" class="br.com.store.cms.user.action.PrepareClientRegisteredAction" method="listAll">	
			<result name="success">/cms/pages/user/template_list_user.jsp</result>
			<result name="error">/cms/pages/user/template_list_user.jsp</result>
		</action>
		
		<action name="ClientInitRegisteredAction" class="br.com.store.cms.user.action.PrepareClientRegisteredAction">	
			<result name="input">/cms/pages/user/template_message_user.jsp</result>
		</action>
		
		
	
	</package>



    <!-- Add packages here -->

</struts>

