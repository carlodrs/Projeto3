<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<!-- Unit persistence -->
	<persistence-unit name="SSJPersistence" transaction-type="RESOURCE_LOCAL">
		
		<!-- Provider: Hibernate -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<!-- Persistences POJO -->
		<class>com.ssj.persistence.account.User</class>
		<class>com.ssj.persistence.account.UserEmail</class>
		<class>com.ssj.persistence.account.EClient</class>
		<class>com.ssj.persistence.account.EClientSys</class>
		
		<!-- Access Configuration -->
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
	        <property name="hibernate.connection.username" value="root"/>
	        <property name="hibernate.connection.password" value="mysql"/>
	        <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/SSJDEV"/>
	        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
	    	<property name="hibernate.show_sql" value="true"/>
	    	<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	    </properties>
	</persistence-unit>
 
</persistence>
